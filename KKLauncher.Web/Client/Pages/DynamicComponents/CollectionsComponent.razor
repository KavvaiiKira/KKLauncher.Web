<div class="items--wrapper">
    @if (collections != null && collections.Any())
    {
        for (int i = 0; i < collections.Count; i++)
        {
            if (i == 0)
            {
                <AddCollectionComponent />
            }
            else
            {
                var collection = collections[i];

                <CollectionPageComponent Collection="@collection" />
            }
        }
    }
    else
    {
        <AddCollectionComponent />
    }
</div>