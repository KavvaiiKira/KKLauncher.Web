<div class="items--wrapper">
    @if (apps != null && apps.Any())
    {
        for (int i = 0; i < apps.Count; i++)
        {
            if (i == 0)
            {
                <AddAppComponent />
            }
            else
            {
                var app = apps[i];

                <AppPageComponent App="@app" />
            }
        }
    }
    else
    {
        <AddAppComponent />
    }
</div>