@inject ComponentBus _bus

@implements IDisposable

<div class="add-collection-main--wrapper @(_addCollectionShown ? "add-collection-active" : string.Empty)">
    <div class="add-collection-img--wrapper">
        <img class="add-collection-img" src="icons/plus.png" @onclick="ShowAddCollectionForm" />
    </div>
    <div class="add-collection-form--wrapper @(_addCollectionShown ? "show" : string.Empty)">
        @if (_addCollectionShown)
        {
            <AddCollectionForm />   
        }
    </div>
</div>